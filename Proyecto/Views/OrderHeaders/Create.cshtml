@model ProyectoModels.Models.OrderHeader

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" readonly value="@ViewBag.total"/>
            </div>
            <div class="form-group">
                <label asp-for="IdCard" class="control-label"></label>
                <select asp-for="IdCard" class ="form-control" asp-items="ViewBag.IdCard"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdContact" class="control-label"></label>
                <select asp-for="IdContact" class ="form-control" asp-items="ViewBag.IdContact"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



